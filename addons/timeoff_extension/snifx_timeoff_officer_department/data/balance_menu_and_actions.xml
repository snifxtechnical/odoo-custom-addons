<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="0">
    <!-- 
    Add groups to existing Reporting menu
    Allow access for:
    - Officer with Balance (Enhanced) - department-based view
    - Officer: Manage all requests - see ALL departments
    - Time Off Administrator - see ALL departments
    - Administrator - full access
    -->
    <record id="hr_holidays.menu_hr_holidays_report" model="ir.ui.menu">
        <field name="groups_id" eval="[
            (4, ref('snifx_timeoff_officer_department.group_timeoff_officer_department')),
            (4, ref('hr_holidays.group_hr_holidays_user')),
            (4, ref('hr_holidays.group_hr_holidays_manager')),
            (4, ref('base.group_system'))
        ]"/>
    </record>

