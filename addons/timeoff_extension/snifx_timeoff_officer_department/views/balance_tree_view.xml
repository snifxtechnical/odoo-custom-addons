<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ob_hr_leave_employee_type_report_tree" model="ir.ui.view">
        <field name="name">hr.leave.employee.type.report.tree.officerbalance</field>
        <field name="model">hr.leave.employee.type.report</field>
        <field name="arch" type="xml">
            <list string="Time Off Balance by Employee and Type" export_xlsx="1">
                <field name="employee_id"/>
                <field name="leave_type"/>
                <field name="department_id"/>
                <field name="number_of_days" string="Number of Days"/>
                <field name="number_of_hours" string="Number of Hours" optional="hide"/>
                <field name="date_from" string="Start Date" optional="show"/>
                <field name="date_to" string="End Date" optional="show"/>
                <field name="holiday_status" string="Status" optional="show"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>
</odoo>
