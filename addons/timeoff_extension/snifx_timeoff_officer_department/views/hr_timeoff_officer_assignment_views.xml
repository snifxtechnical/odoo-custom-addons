<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_hr_timeoff_officer_assignment_tree" model="ir.ui.view">
        <field name="name">hr.timeoff.officer.assignment.tree</field>
        <field name="model">hr.timeoff.officer.assignment</field>
        <field name="arch" type="xml">
            <list string="Time Off Officer Assignments" 
                  decoration-muted="not active">
                <field name="user_id"/>
                <field name="department_id"/>
                <field name="date_from" optional="show"/>
                <field name="date_to" optional="show"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="view_hr_timeoff_officer_assignment_form" model="ir.ui.view">
        <field name="name">hr.timeoff.officer.assignment.form</field>
        <field name="model">hr.timeoff.officer.assignment</field>
        <field name="arch" type="xml">
            <form string="Time Off Officer Assignment">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "active"}'/>
                        </button>
                    </div>
                    
                    <group>
                        <group>
                            <field name="user_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="department_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        </group>
                    </group>
                    
                    <group string="Assignment Details">
                        <field name="notes" placeholder="Additional notes about this assignment..." nolabel="1"/>
                    </group>
                    
                    <div class="alert alert-info" role="alert">
                        <strong>Note:</strong> This officer will be able to:
                        <ul>
                            <li>View and approve leave requests for employees in <strong><field name="department_id" readonly="1" nolabel="1" class="d-inline"/></strong> and all its sub-departments</li>
                            <li>View balance reports for the assigned department tree</li>
                            <li>View all employees (Resume and Work Information tabs only)</li>
                            <li>Create and manage public holidays</li>
                            <li><strong>Cannot</strong> approve their own leave requests</li>
                        </ul>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_hr_timeoff_officer_assignment_search" model="ir.ui.view">
        <field name="name">hr.timeoff.officer.assignment.search</field>
        <field name="model">hr.timeoff.officer.assignment</field>
        <field name="arch" type="xml">
            <search string="Search Officer Assignments">
                <field name="user_id"/>
                <field name="department_id"/>
                
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                
                <separator/>
                
                <filter string="Current Assignments" name="current" 
                        domain="['|', ('date_from', '=', False), ('date_from', '&lt;=', context_today().strftime('%Y-%m-%d')),
                                 '|', ('date_to', '=', False), ('date_to', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                
                <group expand="0" string="Group By">
                    <filter string="User" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Department" name="group_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Company" name="group_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_hr_timeoff_officer_assignment" model="ir.actions.act_window">
        <field name="name">Time Off Officer Assignments</field>
        <field name="res_model">hr.timeoff.officer.assignment</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1, 'search_default_current': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Time Off Officer Assignment
            </p>
            <p>
                Assign users to manage time off requests for specific department trees.
                Officers can approve leave requests, view balance reports, and manage public holidays.
            </p>
        </field>
    </record>
    
    <!-- Menu Item (under Time Off > Configuration) -->
    <menuitem id="menu_hr_timeoff_officer_assignment"
              name="Officer Assignments"
              parent="hr_holidays.menu_hr_holidays_configuration"
              action="action_hr_timeoff_officer_assignment"
              sequence="100"
              groups="hr_holidays.group_hr_holidays_manager"/>
</odoo>
