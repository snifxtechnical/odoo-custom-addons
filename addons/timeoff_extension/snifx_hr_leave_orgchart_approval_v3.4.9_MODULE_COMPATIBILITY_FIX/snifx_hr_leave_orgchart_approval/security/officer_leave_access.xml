<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">
    
    <!-- Additional rule: Officers can see leaves from their notification departments -->
    <record id="hr_leave_officer_notification_access" model="ir.rule">
      <field name="name">Time Off: Officer Notification Department Access</field>
      <field name="model_id" ref="hr_holidays.model_hr_leave"/>
      <field name="domain_force">
        ['|',
          ('employee_id.department_id.notification_officer_ids', 'in', [user.id]),
          ('employee_id.department_id.parent_id.notification_officer_ids', 'in', [user.id])
        ]
      </field>
      <field name="groups" eval="[(4, ref('snifx_timeoff_officer_department.group_timeoff_officer_department'))]"/>
      <field name="perm_read" eval="True"/>
      <field name="perm_write" eval="False"/>
      <field name="perm_create" eval="False"/>
      <field name="perm_unlink" eval="False"/>
    </record>

  </data>
</odoo>
