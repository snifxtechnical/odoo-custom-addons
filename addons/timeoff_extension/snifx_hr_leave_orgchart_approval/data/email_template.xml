<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="1">

    <!-- Email Template: Approval Notification -->
    <record id="email_template_approval_notification" model="mail.template">
      <field name="name">Leave Approval: Notification</field>
      <field name="model_id" ref="model_leave_approval_level"/>
      <field name="subject">Leave Approval Required - {{ object.employee_id.name }}</field>
      <field name="email_to">{{ object.approver_id.email }}</field>
      <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
  <p style="margin: 0px; padding: 0px; font-size: 13px;">
    Hello <strong>{{ object.approver_id.name }}</strong>,
  </p>
  <br/>
  <p style="margin: 0px; padding: 0px; font-size: 13px;">
    You have a new leave request to approve:
  </p>
  <br/>
  <table style="border-collapse: collapse; width: 100%; max-width: 600px;">
    <tr>
      <td style="padding: 8px; border: 1px solid #ddd;"><strong>Employee:</strong></td>
      <td style="padding: 8px; border: 1px solid #ddd;">{{ object.employee_id.name }}</td>
    </tr>
    <tr>
      <td style="padding: 8px; border: 1px solid #ddd;"><strong>Leave Type:</strong></td>
      <td style="padding: 8px; border: 1px solid #ddd;">{{ object.leave_id.holiday_status_id.name }}</td>
    </tr>
    <tr>
      <td style="padding: 8px; border: 1px solid #ddd;"><strong>From:</strong></td>
      <td style="padding: 8px; border: 1px solid #ddd;">{{ object.leave_id.request_date_from }}</td>
    </tr>
    <tr>
      <td style="padding: 8px; border: 1px solid #ddd;"><strong>To:</strong></td>
      <td style="padding: 8px; border: 1px solid #ddd;">{{ object.leave_id.request_date_to }}</td>
    </tr>
    <tr>
      <td style="padding: 8px; border: 1px solid #ddd;"><strong>Duration:</strong></td>
      <td style="padding: 8px; border: 1px solid #ddd;">{{ object.leave_id.number_of_days }} days</td>
    </tr>
    <tr>
      <td style="padding: 8px; border: 1px solid #ddd;"><strong>Approval Level:</strong></td>
      <td style="padding: 8px; border: 1px solid #ddd;">Level {{ object.level }}</td>
    </tr>
  </table>
  <br/>
  <p style="margin: 0px; padding: 0px; font-size: 13px;">
    <a href="/web#id={{ object.leave_id.id }}&amp;model=hr.leave&amp;view_type=form" 
       style="background-color: #875A7B; padding: 10px; text-decoration: none; color: #fff; border-radius: 5px;">
      Review Request
    </a>
  </p>
  <br/>
  <p style="margin: 0px; padding: 0px; font-size: 11px; color: #888;">
    This is an automated message. Please do not reply directly to this email.
  </p>
</div>
      </field>
    </record>

    <!-- Email Template: Overdue Reminder -->
    <record id="email_template_overdue_reminder" model="mail.template">
      <field name="name">Leave Approval: Overdue Reminder</field>
      <field name="model_id" ref="model_leave_approval_level"/>
      <field name="subject">REMINDER: Overdue Leave Approval - {{ object.employee_id.name }}</field>
      <field name="email_to">{{ object.approver_id.email }}</field>
      <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
  <p style="margin: 0px; padding: 0px; font-size: 13px;">
    Hello <strong>{{ object.approver_id.name }}</strong>,
  </p>
  <br/>
  <p style="margin: 0px; padding: 0px; font-size: 13px; color: #d9534f;">
    <strong>REMINDER:</strong> The following leave approval is overdue:
  </p>
  <br/>
  <table style="border-collapse: collapse; width: 100%; max-width: 600px;">
    <tr>
      <td style="padding: 8px; border: 1px solid #ddd;"><strong>Employee:</strong></td>
      <td style="padding: 8px; border: 1px solid #ddd;">{{ object.employee_id.name }}</td>
    </tr>
    <tr>
      <td style="padding: 8px; border: 1px solid #ddd;"><strong>Leave Type:</strong></td>
      <td style="padding: 8px; border: 1px solid #ddd;">{{ object.leave_id.holiday_status_id.name }}</td>
    </tr>
    <tr style="background-color: #f8d7da;">
      <td style="padding: 8px; border: 1px solid #ddd;"><strong>Deadline:</strong></td>
      <td style="padding: 8px; border: 1px solid #ddd;">{{ object.deadline }}</td>
    </tr>
  </table>
  <br/>
  <p style="margin: 0px; padding: 0px; font-size: 13px;">
    Please review and process this request as soon as possible.
  </p>
  <br/>
  <p style="margin: 0px; padding: 0px; font-size: 13px;">
    <a href="/web#id={{ object.leave_id.id }}&amp;model=hr.leave&amp;view_type=form" 
       style="background-color: #d9534f; padding: 10px; text-decoration: none; color: #fff; border-radius: 5px;">
      Review Now
    </a>
  </p>
</div>
      </field>
    </record>

    <!-- Email Template: Leave Approved (to employee) -->
    <record id="email_template_leave_approved" model="mail.template">
      <field name="name">Leave Approved: Notification to Employee</field>
      <field name="model_id" ref="hr_holidays.model_hr_leave"/>
      <field name="subject">Your Leave Request Has Been Approved</field>
      <field name="email_to">{{ object.employee_id.work_email or object.employee_id.user_id.email }}</field>
      <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
  <p style="margin: 0px; padding: 0px; font-size: 13px;">
    Hello <strong>{{ object.employee_id.name }}</strong>,
  </p>
  <br/>
  <p style="margin: 0px; padding: 0px; font-size: 13px; color: #5cb85c;">
    <strong>Good news!</strong> Your leave request has been approved.
  </p>
  <br/>
  <table style="border-collapse: collapse; width: 100%; max-width: 600px;">
    <tr>
      <td style="padding: 8px; border: 1px solid #ddd;"><strong>Leave Type:</strong></td>
      <td style="padding: 8px; border: 1px solid #ddd;">{{ object.holiday_status_id.name }}</td>
    </tr>
    <tr>
      <td style="padding: 8px; border: 1px solid #ddd;"><strong>From:</strong></td>
      <td style="padding: 8px; border: 1px solid #ddd;">{{ object.request_date_from }}</td>
    </tr>
    <tr>
      <td style="padding: 8px; border: 1px solid #ddd;"><strong>To:</strong></td>
      <td style="padding: 8px; border: 1px solid #ddd;">{{ object.request_date_to }}</td>
    </tr>
    <tr>
      <td style="padding: 8px; border: 1px solid #ddd;"><strong>Duration:</strong></td>
      <td style="padding: 8px; border: 1px solid #ddd;">{{ object.number_of_days }} days</td>
    </tr>
  </table>
  <br/>
  <p style="margin: 0px; padding: 0px; font-size: 13px;">
    Enjoy your time off!
  </p>
  <br/>
  <p style="margin: 0px; padding: 0px; font-size: 13px;">
    <a href="/web#id={{ object.id }}&amp;model=hr.leave&amp;view_type=form" 
       style="background-color: #5cb85c; padding: 10px; text-decoration: none; color: #fff; border-radius: 5px;">
      View Leave Request
    </a>
  </p>
</div>
      </field>
    </record>

  </data>
</odoo>
