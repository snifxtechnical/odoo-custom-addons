<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- Add Time Off Approval Settings to Employee form -->
    <record id="hr_employee_form_timeoff_settings" model="ir.ui.view">
      <field name="name">hr.employee.form.timeoff.settings</field>
      <field name="model">hr.employee</field>
      <field name="inherit_id" ref="hr.view_employee_form"/>
      <field name="arch" type="xml">
        
        <!-- Add to HR Settings page/group -->
        <xpath expr="//page[@name='hr_settings']" position="inside">
          <group string="Time Off Approval Settings" groups="hr.group_hr_user">
            <field name="auto_approve_as_top_management" widget="boolean_toggle"/>
            <field name="force_single_approval_level" widget="boolean_toggle"/>
          </group>
        </xpath>
        
      </field>
    </record>

  </data>
</odoo>
