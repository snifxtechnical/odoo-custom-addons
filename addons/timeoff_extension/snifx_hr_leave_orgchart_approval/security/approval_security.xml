<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">
    
    <!-- Rule: Users can see approval levels for their leaves OR leaves they're involved in -->
    <record id="approval_level_user_rule" model="ir.rule">
      <field name="name">Approval Level: User Read</field>
      <field name="model_id" ref="model_leave_approval_level"/>
      <field name="domain_force">[
        '|', '|',
          ('leave_id.employee_id.user_id', '=', user.id),
          ('approver_id', '=', user.id),
          ('leave_id.approval_level_ids.approver_id', '=', user.id)
      ]</field>
      <field name="groups" eval="[(4, ref('base.group_user'))]"/>
      <field name="perm_read" eval="True"/>
      <field name="perm_write" eval="False"/>
      <field name="perm_create" eval="False"/>
      <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Rule: Approvers can write their assigned levels -->
    <record id="approval_level_approver_write_rule" model="ir.rule">
      <field name="name">Approval Level: User Write</field>
      <field name="model_id" ref="model_leave_approval_level"/>
      <field name="domain_force">[('approver_id', '=', user.id)]</field>
      <field name="groups" eval="[(4, ref('base.group_user'))]"/>
      <field name="perm_read" eval="False"/>
      <field name="perm_write" eval="True"/>
      <field name="perm_create" eval="False"/>
      <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Rule: Officers can see and manage all approval levels -->
    <record id="approval_level_officer_rule" model="ir.rule">
      <field name="name">Approval Level: Officer</field>
      <field name="model_id" ref="model_leave_approval_level"/>
      <field name="domain_force">[(1, '=', 1)]</field>
      <field name="groups" eval="[(4, ref('hr_holidays.group_hr_holidays_user'))]"/>
      <field name="perm_read" eval="True"/>
      <field name="perm_write" eval="True"/>
      <field name="perm_create" eval="True"/>
      <field name="perm_unlink" eval="True"/>
    </record>

  </data>
</odoo>
