<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Demo: Strict Annual Leave Policy -->
        <record id="demo_policy_strict_annual" model="hr.leave.type">
            <field name="name">Annual Leave (Strict Policy)</field>
            <field name="requires_allocation">yes</field>
            <field name="employee_requests">yes</field>
            
            <!-- Date Restrictions -->
            <field name="allow_future_request" eval="True"/>
            <field name="max_backdate_days">7</field>
            
            <!-- Request Validation -->
            <field name="enable_min_notice" eval="True"/>
            <field name="threshold_days">3.0</field>
            <field name="min_notice_qty">14</field>
            <field name="min_notice_unit">days</field>
            <field name="scope_mode">company</field>
            
            <!-- Working Days Limit -->
            <field name="limit_by_working_days" eval="True"/>
            <field name="max_working_days">10</field>
        </record>
        
        <!-- Demo: Flexible Sick Leave Policy -->
        <record id="demo_policy_flexible_sick" model="hr.leave.type">
            <field name="name">Sick Leave (Flexible Policy)</field>
            <field name="requires_allocation">no</field>
            <field name="employee_requests">yes</field>
            
            <!-- Date Restrictions -->
            <field name="allow_future_request" eval="False"/>
            <field name="max_backdate_days">3</field>
            
            <!-- No minimum notice for sick leave -->
            <field name="enable_min_notice" eval="False"/>
            
            <!-- Working Days Limit -->
            <field name="limit_by_working_days" eval="True"/>
            <field name="max_working_days">5</field>
        </record>
        
    </data>
</odoo>
